{
	"manifest_version": 2,
	
	"name": "tdo",
	"version": "1.0",
	"description": "Keyboard driven, hackable TODO list https://mstijak.github.io/tdo",
	"author": "Marko Stijak",
	"homepage_url": "https://github.com/mstijak/tdo",
	
	"icons": {
		"16": "assets/icon_16.png",
		"48": "assets/icon_48.png",
		"128": "assets/icon_128.png"
	},
	
	"chrome_url_overrides": {
		"newtab": "index.html"
	},
	
	"permissions": [
		"storage",
		"chrome://favicon/"
	],
	
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.polyfill.io https://unpkg.com; object-src 'self'",
	
	"browser_action": {
		"default_icon": "assets/icon_16.png",
		"default_title": "tdo",
		"default_popup": "index.html"
	}
}